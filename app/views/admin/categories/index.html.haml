.row
  .large-9.columns
    %h1 All Product Categories
.row
  .large-9.columns
    %table
      %tr
        %th Name
        %th Active
        %th
        %th

      - @categories.each do |category|
        %tr
          %td= link_to category.name, admin_category_url(category)
          %td
            - if category.active
              = link_to '', edit_admin_category_path(category), class: "fi-check"
            - else
              = link_to '', edit_admin_category_path(category), class: "fi-x"
          %td= link_to '', edit_admin_category_path(category), class: "fi-pencil"
          %td= link_to '', admin_category_url(category), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "fi-trash"
    = will_paginate @categories

  .large-3.columns
    = render 'admin/shared/sidenav'
    = link_to '  New Category', new_admin_category_path, class: "button fi-plus admin"
